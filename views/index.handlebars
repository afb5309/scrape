<style>
    .link {
        height: 55px;
    }

    .updatedArticles {
        text-align: center;
    }

    .whiteTitle {
        color: rgb(247, 179, 34);
        padding-left: 10px;
        padding-right: 10px;
        font-weight: bolder;
    }
</style>

<div class="container center-align">
    {{#each articles}}
    <div class="col s12 m12">
    <div class="container">
        <div class="container">
            <div class="row">
                <div class="card">
                    <div class="card-image">
                        <img src={{this.img}}>
                        <a class="save btn-floating halfway-fab waves-effect waves-light indigo darken-1"  data-id={{this._id}}><i class="material-icons">add</i></a>
                         <a class="comment btn-floating left halfway-fab waves-effect waves-light amber accent-2"  data-id={{this._id}}><i class="material-icons">create</i></a>
                    </div>
                    <div class="center-align">
                        <h1 class="card-title whiteTitle">{{this.title}}</h1>
                    </div>
                    <div class="card-content">
                        <p class="left-align">{{this.summary}}</p>
                    </div>
                    <div class="card-action link">
                        <a href={{this.link}} class="left">This is a link</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    {{/each}}
</div>